---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t('notFound.title')} lang={lang}>
  <div class="not-found">
    <div class="not-found-content card">
      <div class="not-found-icon">404</div>
      <h1>{t('notFound.message')}</h1>
      <p class="not-found-description">{t('notFound.description')}</p>
      
      <div class="not-found-actions">
        <a href={`/${lang}/`} class="btn primary">
          {t('notFound.homeButton')} â†’
        </a>
        <a href={`/${lang}/events`} class="btn">
          {t('notFound.eventsButton')}
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
  }

  .not-found-content {
    max-width: 600px;
    text-align: center;
    padding: 48px 32px;
  }

  .not-found-icon {
    font-size: 120px;
    font-weight: 700;
    background: linear-gradient(135deg, var(--silver) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 32px;
    margin: 0 0 16px 0;
    color: var(--text);
  }

  .not-found-description {
    font-size: 16px;
    color: var(--muted);
    margin: 0 0 32px 0;
    line-height: 1.6;
  }

  .not-found-actions {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    transition: all 0.2s ease;
  }

  .btn:hover {
    transform: translateY(-2px);
  }
</style>
